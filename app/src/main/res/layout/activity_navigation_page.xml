<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorlightBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationPage">

    <Button
        android:id="@+id/customerButton"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="563dp"
        android:layout_marginRight="563dp"
        android:text="Customer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigationTextBox" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="563dp"
        android:layout_marginRight="563dp"
        android:text="Log Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderButton" />

    <TextView
        android:id="@+id/navigationTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="435dp"
        android:layout_marginRight="435dp"
        android:text="Navigation"
        android:textColor="@android:color/white"
        android:textSize="78sp"
        app:fontFamily="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/salesRepButton"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="562dp"
        android:layout_marginRight="562dp"
        android:text="Sales Report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerButton" />

    <Button
        android:id="@+id/orderButton"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="563dp"
        android:layout_marginRight="563dp"
        android:text="Order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salesRepButton" />
</android.support.constraint.ConstraintLayout>